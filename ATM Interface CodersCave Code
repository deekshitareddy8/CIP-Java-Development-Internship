import java.util.Scanner;

public class ATMInterfaceCodersCave {
    static Scanner scanner = new Scanner(System.in);
    static int bal = 25000; 

    public static void main(String[] args) {
        System.out.println("Welcome to CodersCave ATM Interface");
        while (true) {
            System.out.println("1.Check your balance");
            System.out.println("2.Debit/Withdraw cash");
            System.out.println("3.Credit/Deposit cash");
            System.out.println("4.Close/Exit from application");
            System.out.print("Enter your action number: ");
            int select = scanner.nextInt();
            switch (select) {
                case 1:
                    checkCurrentBalance();
                    break;
                case 2:
                    debitMoney();
                    break;
                case 3:
                    creditMoney();
                    break;
                case 4:
                    System.out.println("Thank you for using CodersCave ATM Interface. You are now about to exit the application!");
                    System.exit(0);
                default:
                    System.out.println("Try again");
            }
        }
    }

    private static void checkCurrentBalance() {
        System.out.println("Your current balance is: " + bal);
    }

    private static void debitMoney() {
        System.out.print("Enter the amount to withdraw: ");
        int amt = scanner.nextInt();
        if (amt <= bal) {
            bal -= amt;
            System.out.println("Please collect your cash.");
            System.out.println("Your remaining balance is: " + bal);
        } else {
            System.out.println("Insufficient balance.");
        }
    }

    private static void creditMoney() {
        System.out.print("Enter the amount to deposit: ");
        int amt = scanner.nextInt();
        bal += amt;
        System.out.println("Your new balance is: " + bal);
    }
}
